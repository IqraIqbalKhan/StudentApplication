<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.iqrakhan.studentapplication.TDashboardActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textview_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To SMS App"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="56dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/button_manageStudents"
            style="@style/DashboardButton"
            android:text="Manage Students"
            android:drawableTop="@drawable/a1"
            android:clickable="true"
            android:focusable="true"
             />

        <Button
            android:id="@+id/button_takeAttendance"
            android:text="Take Attendance"
            style="@style/DashboardButton"
           android:drawableTop="@drawable/subscribe"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/button_results"
            android:text="Results"
          android:drawableTop="@drawable/multiuser"
            style="@style/DashboardButton"
            />

        <Button
            android:id="@+id/button_newsFeed"
            android:text="News Feed"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/singleuser"
            android:focusable="true"
            android:clickable="true"
            />

    </LinearLayout>


</LinearLayout>
